<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:nestedScrollingEnabled="false">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="1"
            android:id="@+id/btn_Uno"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="2"
            android:id="@+id/btn_Dos"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="3"
            android:id="@+id/btn_Tres"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="ac"
            android:id="@+id/btn_AC"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="del"
            android:id="@+id/btn_DEL"
            android:layout_row="0"
            android:layout_column="4" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="4"
            android:id="@+id/btn_Cuatro"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="5"
            android:id="@+id/btn_Cinco"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="6"
            android:id="@+id/btn_Seis"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="x"
            android:id="@+id/btn_Multiplicacion"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="/"
            android:id="@+id/btn_Division"
            android:layout_row="1"
            android:layout_column="4" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="7"
            android:id="@+id/btn_Siete"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="+"
            android:id="@+id/btn_Suma"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="-"
            android:id="@+id/btn_Resta"
            android:layout_row="2"
            android:layout_column="4" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="0"
            android:id="@+id/btn_Cero"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="8"
            android:id="@+id/btn_Ocho"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="9"
            android:id="@+id/btn_Nueve"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="."
            android:id="@+id/btn_Decimal"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="exp"
            android:id="@+id/btn_Cuadrado"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="rz"
            android:id="@+id/btn_RaizCuadrada"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:text="="
            android:id="@+id/btn_Igual"
            android:layout_row="3"
            android:layout_column="4" />

    </GridLayout>

    <TextView
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:text="0"
        android:id="@+id/tv_Pantalla"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout"
        android:gravity="right" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="24dp"
        android:id="@+id/tv_PantallaAuxiliar"
        android:textSize="10dp"
        android:gravity="right"
        android:layout_below="@+id/tv_Pantalla"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="24dp"
        android:id="@+id/tv_Debugging"
        android:textSize="10dp"
        android:gravity="right"
        android:layout_below="@+id/gridLayout"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_alignParentBottom="true" />
</RelativeLayout>